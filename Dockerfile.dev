FROM golang:1.25.1-bookworm@sha256:2960a1db140a9a6dd42b15831ec6f8da0c880df98930411194cf11875d433021 AS go


FROM node:24-bookworm@sha256:a2ed436bacdcc9dd543202a327bbce2519c43e3755a41a186f8f51c037ef3342

COPY --from=go /usr/local/go /usr/local/go

ARG uid
ARG gid

ENV CGO_ENABLED=0
ENV GOPATH="/go"
ENV GOCACHE="/go-cache"
ENV PATH="/go/bin:/usr/local/go/bin:$PATH"

RUN install -d --owner=${uid} --group=${gid} \
    /home/node/.npm \
    /go \
    /go-cache \
    /database

USER ${uid}:${gid}

WORKDIR /application
